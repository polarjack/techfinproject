<html>

<head>
  <% include ./../header %>
</head>

<body>
  <% include ./../navbar %>
    <div class="container">
      <h1>Fill in your House Info</h1>
      <div class="row">
        <div class="col s12">
          <div class="card-panel">
            <div class="row">
              <div class="col s12">
                <form action="insertdo" method="post">
                  <div class="row">
                    <div class="input-field col s12">
                      <input type="text" id="itemName" name="itemName">
                      <label for="itemName">物件名稱</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                      <input type="text" id="location" name="location">
                      <label for="location">地址</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s12">
                      <input type="text" id="pricePerMonth" name="pricePerMonth">
                      <label for="pricePerMonth">價格/每月</label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col s12">
                      <h6>Optional</h6>
                    </div>
                  </div>
                  <div class="row">
                    <div class="input-field col s6">
                      <input type="text" id="startDate" name="startDate" class="datepicker">
                      <label for="startDate">開始時間</label>
                    </div>
                    <div class="input-field col s6">
                      <input type="text" id="endDate" name="endDate" class="datepicker">
                      <label for="endDate">結束時間</label>
                    </div>
                  </div>

                  <div class="row">
                    <button class="waves-effect waves-light btn right" type="submit">Submit</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</body>

</html>