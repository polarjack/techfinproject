<html>

<head>
  <% include ./../header %>
</head>

<body>
  <% include ./../navbar %>
    <div class="container">

      <div class="row">
        <div class="col s8">
          <h1>My Items
            <a class="waves-effect waves-light btn" href="insert">Insert</a>
          </h1>
        </div>
      </div>

      <ul class="collapsible expandable">

        <% items.map(function(i) { 
          i.start_date = new Date(i.start_date);
          i.start_date = i.start_date.toDateString();
          i.end_date = new Date(i.end_date);
          i.end_date = i.end_date.toDateString();
          
          %>
          <li>
            <div class="collapsible-header">
              <i class="material-icons">business</i>
              <%= i.item_name%>
            </div>
            <div class="collapsible-body">
              <div class="row">
                <div class="col s6">
                  <ul class="left-align">
                    <li class="valign-wrapper">
                      <i class="material-icons">room</i>&nbsp;
                      <%=i.location%>
                    </li>
                    <li class="valign-wrapper">
                      <i class="material-icons">polymer</i>&nbsp;
                      <%=i.contract_address%>
                    </li>
                    <li class="valign-wrapper">
                      <i class="material-icons">check_circle</i>&nbsp;
                      <%=i.start_date%>
                        <i class="material-icons">keyboard_arrow_right</i>
                        <%=i.end_date%>
                    </li>
                  </ul>
                </div>
                <div class="col s6">
                  <ul>
                    <li class="valign-wrapper">BOOKED: YES</li>
                    <li class="valign-wrapper">ORDER USER: name</li>
                    <li class="valign-wrapper">ORDER TIME: start_date > end_date</li>
                  </ul>
                </div>
              </div>
            </div>
          </li>
          <% }) %>
      </ul>
    </div>
</body>

<script>
  $(document).ready(function () {
    $('.collapsible').collapsible();
    $('.collapsible.expandable').collapsible({
      accordion: false
    });
  });
</script>

</html>